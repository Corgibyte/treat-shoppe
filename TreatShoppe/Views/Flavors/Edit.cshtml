@model TreatShoppe.Models.Flavor

<h4>Edit this flavor: @Html.DisplayFor(model => model.Name)</h4>

<div class="inner-pane">
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.FlavorId)

    @Html.LabelFor(model => model.Name, new {@class="form-label"})
    @Html.TextBoxFor(model => model.Name, new {@class="form-control", @required = true})

    <button type="submit" class="btn btn-input">Save Changes</button>
  }
</div>

@Html.ActionLink("Back to flavor", "Details", new {id = Model.FlavorId }, new { @role="button", @class="btn" })