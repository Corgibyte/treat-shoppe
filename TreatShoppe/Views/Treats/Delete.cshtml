@model TreatShoppe.Models.Treat

<h2>Are you sure you want to delete this treat: @Html.DisplayFor(model => model.Name)?</h2>
<h6>This cannot be undone!</h6>

<div class="inner-pane">
  @using (Html.BeginForm())
  {
    <button type="submit" class="btn btn-input">Delete</button>
  }
</div>

@Html.ActionLink("Back to treat", "Details", new { id = Model.TreatId }, new { @role="button", @class="btn" })